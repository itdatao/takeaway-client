<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.mapper.FoodCategoryMapper">

    <resultMap type="FoodCategory" id="FoodCategoryResult">
        <result property="id" column="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="sort" column="sort"/>
        <result property="title" column="title"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>
    <sql id="foodCategoryVO">
        select id,parent_id,sort,title,create_time,update_time,is_deleted
    </sql>
    <select id="selectChildrenFoodCategoryByParentId" resultType="com.ruoyi.web.domain.FoodCategory">
        <include refid="foodCategoryVO"></include>
        from
        t_category
        where parent_id=#{parentId}
    </select>
    <select id="hasChildByCategoryId" resultType="java.lang.Integer">
        select count(1) from t_category
        where parent_id=#{categoryId}
    </select>
    <select id="checkCategoryNameUnique" resultType="com.ruoyi.web.domain.FoodCategory">
        <include refid="foodCategoryVO"></include>
        from t_category
        where title=#{categoryName} and parent_id=#{parentId}
        limit 1
    </select>


</mapper>